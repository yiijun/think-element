{
  "fields": [
    {
      "type": "Input",
      "label": "分类名称",
      "key": "name",
      "value": "",
      "placeholder": "请输入分类名称",
      "prop": {
        "table_show": true,
        "search": "like",
        "is_null": true,
        "trigger": "blur"
      }
    },
    {
      "type": "CascaderRadio",
      "label": "父级菜单",
      "key": "pid",
      "value": "",
      "placeholder": "选择父级菜单",
      "prop": {
        "table_show": false,
        "search": "=",
        "is_null": false,
        "trigger": "change",
        "filterable": true,
        "emitPath": "false",
        "bind_label": "name",
        "bind_value": "id",
        "callback": [
          "\\app\\admin\\model\\Category",
          "getPidSelect"
        ]
      }
    },
    {
      "type": "Input",
      "label": "跳转地址",
      "key": "url",
      "value": "",
      "placeholder": "请输入跳转地址",
      "prop": {
        "table_show": true,
        "search": "=",
        "is_null": false,
        "trigger": "blur"
      }
    },
    {
      "type": "Image",
      "label": "栏目封面",
      "key": "image",
      "value": "",
      "placeholder": "请上传图片",
      "prop": {
        "table_show": true,
        "is_null": false,
        "trigger": "blur"
      }
    },
    {
      "type": "Radio",
      "label": "分类标签",
      "key": "tag",
      "value": "",
      "placeholder": "请输入路由规则",
      "prop": {
        "bind_label": "name",
        "bind_value": "id",
        "table_show": true,
        "search": "=",
        "is_null": false,
        "trigger": "blur",
        "options":[{"id": 1,"name": "首页"},{"id": 2,"name": "热门"},{"id": 3,"name": "推荐"}]
      }
    },
    {
      "type": "Input",
      "label": "关键词",
      "key": "keyword",
      "value": "",
      "placeholder": "请输入分类关键词",
      "prop": {
        "table_show": true,
        "search": "=",
        "is_null": false,
        "trigger": "blur"
      }
    },
    {
      "type": "Textarea",
      "label": "描述",
      "key": "description",
      "value": "",
      "placeholder": "请输入分类描述",
      "prop": {
        "table_show": false,
        "is_null": false,
        "trigger": "blur"
      }
    },
    {
      "type": "number",
      "label": "权重",
      "key": "weigh",
      "value": 0,
      "prop": {
        "table_show": true,
        "search": ">",
        "is_null": false,
        "ext": {
          "min": 0,
          "max": 9999999,
          "step": 1
        }
      }
    },
    {
      "type": "radio",
      "label": "状态",
      "key": "status",
      "value": 1,
      "prop": {
        "table_show": true,
        "search": "=",
        "is_null": true,
        "trigger": "blur",
        "bind_label": "name",
        "bind_value": "id",
        "options":[{"id": 1,"name": "显示"},{"id": 2,"name": "隐藏"}]
      }
    }
  ],
  "tree_table": true,
  "expand_all": true,
  "button" : ["add","edit","delete","deletes","search","reset"],
  "plugins": ["images"]
}